{
	"compilerOptions": {
		"strict": true,
		"target": "es5",
		"rootDir": "src/",
		"outDir": "dist/",
		"allowJs": false,
		"module": "es2015",
		"moduleResolution": "node",
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"dom",
			"es2015.promise",
			"es6"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
        "webpack.config.js",
		"src/typings",
		"src/app.ts",
		"node_modules"
    ]
}
